{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "@nicknisi/standard/tsconfigs/base",
	"compilerOptions": {
		"types": ["vite/client"],
		"baseUrl": ".",
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@data/*": ["src/data/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
