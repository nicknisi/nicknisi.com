$fullWidth = 80;
$columns = 12;
$gutter = 1;

.container {
	width: unit($fullWidth, '%');
	margin: auto;
	overflow: hidden;
}

[class^="grid-"] {
	display: inline;
	float: left;
	margin-left: unit($gutter, '%');
	margin-right: unit($gutter, '%');
}

for $col in 1..$columns {
	.grid-{$col} {
		width: unit(($col / $columns - $gutter / 100 * 2) * 100, '%');
	}
}

@media screen and (max-width: 480px) {
	[class^="grid-"] {
		float: none;
		display: block;
		width: 100%;
		margin: 0;
	}
}
