---
import type { Talk } from '@/types.js';
import { getThumbnail } from '@/util.js';
import { Image } from 'astro:assets';

interface Props {
	talk: Talk;
}

const { talk } = Astro.props;
const { source, url, title, location, date, type } = talk;
const thumbnail = await getThumbnail(talk);
---

<div
	class="xs:flex-grow w-89 not-prose m-2 space-x-2 space-y-2 rounded-lg bg-cool-gray-50 p-2 pb-6 text-lg shadow-lg md:flex-1 dark:bg-cool-gray-900"
>
	<a href={url} target={source === 'page' ? undefined : '_blank'} class="no-underline">
		<div class="flex flex-col items-center gap-4 px-2 pb-4 pt-1 text-center">
			<Image
				class="not-prose mx-1 aspect-video h-auto w-56 rounded-lg object-cover pb-1"
				src={thumbnail as ImageMetadata}
				alt={title}
				width={205}
				height={111}
			/>
			<h5 class="h-12 text-center text-xl font-bold leading-tight text-grey-900 dark:text-grey-100">
				{title}
			</h5>
			<div class="align-content-center justify-content-center flex flex-col">
				{(<div class="text-blue-grey-600 text-sm font-bold dark:text-blue-gray-200">{date}</div>)}
				{
					location && (
						<div class="h-8 text-lg font-medium leading-tight text-grey-600 dark:text-grey-200">{location}</div>
					)
				}
				<div class="pt-4">
					<span
						class="last shadow-gray-200 mr-1 inline-block min-w-24 rounded-full bg-purple-700 px-2 py-1 font-sans text-base font-semibold uppercase text-grey-100 shadow-lg last:mr-0"
					>
						{type}
					</span>
				</div>
			</div>
		</div>
	</a>
</div>
