---
import { DateTime } from 'luxon';

interface Props {
  date: Date;
}

const { date } = Astro.props;
const luxonDate = DateTime.fromJSDate(date, { zone: 'utc' });

const month = luxonDate.toLocaleString({ month: 'short' });
const { day, year } = luxonDate;
---

<div
  class="flex flex-col justify-center items-center text-blue-grey-700 dark:text-blue-gray-200"
>
  <div class="text-xs tracking-wider uppercase">{month}</div>
  <div class="text-xl font-bold">{day}</div>
  <div class="text-xs tracking-wider uppercase">{year}</div>
</div>
