---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';

interface Props {
  title?: string | undefined;
  description?: string | undefined;
  headerImage?: string | undefined;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const { title, description, hideHeader, hideFooter } = Astro.props;
---

<style is:global>
  .base-colors {
    @apply bg-blue-gray-50 dark:bg-grey-900 text-blue-gray-800 dark:text-grey-50;
  }
</style>

<html lang="en">
  <Head title={title} description={description} />
  <body class="font-normal base-colors">
    {!hideHeader && <Header />}
    <main class="px-6 mb-auto z-30">
      <div class="max-w-3xl mx-auto">
        <slot />
      </div>
    </main>
    {!hideFooter && <Footer />}
  </body>
</html>
