---
import Head from '@components/Head.astro';
import resume from '@data/resume.json';
import { Icon } from 'astro-icon/components';
---

<html lang="en">
  <Head title="Resume - Nicholas Nisi" description="Nick Nisi's Resume" />
  <body>
    <main
      class="container relative mx-auto scroll-my-12 overflow-auto p-4 print:p-12 md:p-16"
    >
      <section class="spacey-y-8 print:spacey-y-6 mx-auto max-w-2xl bg-white">
        <div class="flex items-center justify-between">
          <div class="flex-1 space-y-1.5">
            <h1 class="text-2xl font-bold">{resume.basics.name}</h1>
            <p class="max-w-md text-pretty font-mono text-sm text-grey-500">
              {resume.basics.summary}
            </p>
            <p class="text-xs text-grey-400">
              {resume.basics.location.city}, {resume.basics.location.region}
            </p>
            <div class="flex pt-2 print:hidden">
              <>
                <a
                  class="border-1 mr-2 inline-block border-grey-300 text-xs text-grey-400 hover:text-grey-600"
                  href={'mailto:' + resume.basics.email}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon
                    name="mdi:envelope-outline"
                    class="mr-1 inline-block size-4"
                  />
                </a>
                <a
                  class="border-1 mr-2 inline-block border-grey-300 text-xs text-grey-400 hover:text-grey-600"
                  href={'tel:' + resume.basics.phone}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Icon
                    name="ic:round-phone-iphone"
                    class="mr-1 inline-block size-4"
                  />
                </a>
              </>
              <>
                {
                  resume.basics.profiles.map((profile) => (
                    <a
                      class="border-1 mr-2 inline-block border-grey-300 text-xs text-grey-400 hover:text-grey-600"
                      href={profile.url}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <Icon
                        name={`simple-icons:` + profile.network.toLowerCase()}
                        class="mr-1 inline-block size-4"
                      />
                    </a>
                  ))
                }
              </>
            </div>
          </div>
          <img
            class="size-32 rounded-md shadow-md shadow-grey-700"
            src={resume.basics.image}
            alt={resume.basics.name}
          />
        </div>
        <div class="mt-4 space-y-8">
          <h2 class="text-2xl font-bold">Work Experience</h2>
          <div class="space-y-4">
            {
              resume.work.map((job) => (
                <div class="space-y-2">
                  <div>
                    <div class="flex justify-between">
                      <div class="flex items-baseline gap-2">
                        <div class="p-0 text-lg font-medium">
                          <a href={job.url}>{job.name}</a>
                        </div>
                        <div class="font-mono text-xs">{job.location}</div>
                        {job.remote && (
                          <span class="ml-2 inline-block items-center rounded-md bg-grey-50 p-1 font-mono text-xs font-medium">
                            Remote
                          </span>
                        )}
                      </div>
                      <div class="flex font-mono">
                        <div>{job.startDate}</div>
                        <div>&nbsp;-&nbsp;</div>
                        <div>{job.endDate ? job.endDate : 'Present'}</div>
                      </div>
                    </div>
                    <div class="font-mono text-sm">{job.position}</div>
                  </div>
                  <div class="font-mono text-sm">
                    <ul class="list-disc">
                      {job.highlights?.map((highlight) => (
                        <li>{highlight}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
