.social-links {
	padding: 0;
	margin: 0;
	list-style: none;

	li {
		display: inline;
		font-size: 24px;
		padding: 0 5px;
	}
}

.bio {
	.biopic {
		margin: 0 auto;
	}
	.name {
		padding: 0;
		margin: 0;
	}
	.slogan {
		padding: 0;
		margin: 0;
		font-size: 0.8em;
	}
}

.list {
	padding: 0 0 0 15px;
	margin: 0;

	li {
		list-style-type: none;
		padding: 5px 3px;
		overflow: hidden;
		.date {
			float: right;
		}
	}
}

.title {
	font-weight: 100;
}
