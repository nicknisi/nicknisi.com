* {
	box-sizing: border-box;
}

html, body {
	height: 100%;
	font-size: 16px;
	font-family: 'Open Sans', Helvetica, Arial, Sans-serif;
	padding: 0;
	margin: 0 auto;
}

body {
	padding: 10px;
}

a, a:link, a:visited {
	text-decoration: none;
}

h1, h2, h3, h4, h5, h6 {
	margin: 0;
}

code, img, iframe {
	max-width: 100%;
}
