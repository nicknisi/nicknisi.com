    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{{ renderData.title or title or metadata.title }}</title>

        <meta name="theme-color" content="#421987">

        <link rel="shortcut icon" href="/img/favicon.ico">
        <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

        <link rel="description" content="{{ renderData.description or description or metadata.description }}">
        <link rel="og:description" content="{{ renderData.description or description or metadata.description }}">
        <meta property="og:image" content="{{ renderData.headerImage or headerImage or metadata.avatar}}">

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@nicknisi">
        <meta name="twitter:title" content="{{renderData.title or title or metadata.title}}">
        <meta name="twitter:title" content="{{renderData.title or title or metadata.title}}">
        <meta name="twitter:description" content="{{renderData.description or description or metadata.description}}">
        <meta name="twitter:image" content="https://nicknisi.com/{{metadata.avatar}}">
        <meta name="twitter:image:alt" content="Nick Nisi">

        <link rel="me" href="mailto:nick@nisi.org">
        <link rel="me" href="https://twitter.com/nicknisi">
        <link rel="me" href="https://github.com/nicknisi">
        <link rel="me" href="https://mastodon.social/@nicknisi">
    </head>
