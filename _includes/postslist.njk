<ul reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
    {% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        {%- if post.data.tags and 'external' in post.data.tags %}
        <a href="{{post.data.external_url}}" class="postlist-link external">
            {{post.data.title}}
            {{ '/img/icons/open-in-new.svg' | embed | safe }}
        </a>
        {% else %}
        <a href="{{ post.url | url }}" class="postlist-link">
            {%if post.data.title %}
            {{ post.data.title }}
            {% else %}
            <code>{{ post.url }}</code>
            {% endif %}
        </a>
        {%- endif %}
        <div class="postlist-info">
            <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
                {{ '/img/icons/calendar-today.svg' | embed | safe }}
                {{ post.date | readableDate }}
            </time>
            <div class="postlist-tags">
                {{ '/img/icons/tag.svg' | embed | safe }}
                {% for tag in post.data.tags %}
                {%- if tag != 'posts' and tag != 'external' -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
                {%- endif -%}
                {% endfor %}
            </div>
        </div>
    </li>
    {% endfor %}
</ul>
