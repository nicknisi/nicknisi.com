<ul reversed class="list-none">
    {% for post in postslist | reverse %}
        <li class="mb-3">
            {%- if post.data.external %}
            <a href="{{post.data.external_url}}" class="flex items-start text-lg font-medium">
                <span>
                    {{post.data.title}}
                    {% icon 'external-link' %}
                </span>
            </a>
        {% else %}
            <a href="{{ post.url | url }}" class="text-lg font-medium">
                {%if post.data.title %}
                    {{ post.data.title }}
                {% else %}
                    <code>{{ post.url }}</code>
                {% endif %}
            </a>
            {%- endif %}
            <div class="flex flex-no-wrap items-center space-x-4">
                <time class="flex items-center flex-shrink-0 text-sm text-gray-700 space-x-2" datetime="{{ post.date | htmlDateString }}">
                    <span class="mx-1 fill-current">{% icon 'calendar' %}</span>
                    <span>{{ post.date | readableDate }}</span>
                </time>
                <div class="flex flex-wrap items-center justify-start flex-initial text-gray-600 space-x-2">
                    <span>{% icon 'tag' %}</span>
                    {% set tags = post.data.tags %}
                    {%- for tag in tags %}
                        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
                    {% endfor %}
                </div>
            </div>
        </li>
    {% endfor %}
</ul>
