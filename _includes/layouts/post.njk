---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set words = content | striptags | wordcount %}
{% set wc = words / 240 %}

<article class="py-10">
    <header class="mb-8">
        <h1 class="font-bold text-3xl md:text-5xl mb-4 tracking-tight">{{ title }}</h1>
        <div class="text-gray-600 text-sm py-1 font-light">
          <span class="uppercase">{{ page.date | readableDate }}</span>
          <span>•</span>
          <span class="uppercase">{{ wc | round }} minute read</span>
          <span>•</span>
          <span>
            {%- for tag in tags | tags %}
              {% include 'tag.njk' %}
            {% endfor %}
          </span>
        </div>
    </header>
    <section class="prose lg:prose-xl prose-code:before:content-[''] prose-code:after:content-['']
    prose-code:font-medium prose-code:text-purple-800 prose-headings:my-3 prose-headings:text-blue-gray-900 pt-6 pb-10">
        {{ content | safe }}
    </section>
    <div class="text-center py-10 sm:py-20">
    {% icon 'star', { classes: 'font-bold text-purple-600'} %}
    {% icon 'star', { classes: 'font-bold text-purple-600'} %}
    {% icon 'star', { classes: 'font-bold text-purple-600'} %}
    </div>
    <div class="flex items-center mx-auto sm:flex-row flex-col">
      <div class="sm:w-32 sm:h-32 h-32 w-32 sm:mr-10 inline-flex items-center justify-center rounded-full text-blue-500
      flex-shrink-0">
        <img src="{{ metadata.profile }}" alt="author" class="drop-shadow-md rounded-full w-32 h-32">
      </div>
      <div class="flex-grow sm:text-left text-center mt-6 sm:mt-0">
        <h2 class="text-gray-900 text-lg title-font font-medium mb-2">{{ metadata.author.name }}</h2>
          <p class="leading-relaxed text-base">{{ metadata.description}}</p>
          <p class="leading-relaxed text-base">Follow me on <a href="{{metadata.social.twitter.url | url}}">Twitter</a>.</p>
      </div>
    </div>
</article>
{% if prevPost and not prevPost.data.external %}
    <div class="flex justify-center mt-8">
        <a class="flex items-center font-medium space-x-4" href="{{ prevPost.url | url }}">
            {% icon 'arrow-long-left' %}
            <span>{{ prevPost.data.title}}</span>
        </a>
    </div>
{% endif %}

