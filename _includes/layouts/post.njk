---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article class="max-w-4xl mx-auto mt-8">
    <header class="mb-8">
        <h1>{{ title }}</h1>
        <div class="flex text-sm space-x-4">
            <div class="flex items-center space-x-2">
                <span class="fill-current">{% icon 'calendar' %}</span>
                <span>{{ page.date | readableDate }}</span>
            </div>
            {% include 'tags.njk' %}
        </div>
    </header>
    <section>
        {{ content | safe }}
    </section>
</article>
{% if prevPost and not prevPost.data.external %}
    <div class="flex justify-center mt-8">
        <a class="flex items-center font-medium space-x-4" href="{{ prevPost.url | url }}">
            {% icon 'arrow-narrow-left' %}
            <span>{{ prevPost.data.title}}</span>
        </a>
    </div>
{% endif %}

