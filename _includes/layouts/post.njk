---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article class="article">
    <header>
        <h1 class="title">{{ title }}</h1>
        <div class="post-info">
            <div class="post-date">
                {{ '/img/icons/calendar-today.svg' | embed | safe }}
                {{ page.date | readableDate }}
            </div>
            <div class="post-tags">
                {{ '/img/icons/tag.svg' | embed | safe }}
                {% for tag in tags | tags %}
                <a class="tag" href="/tags/{{ tag }}/">{{ tag }}</a>
                {% endfor %}
            </div>
        </div>
    </header>
    <section class="article-content">
        {{ content | safe }}
    </section>
</article>
<nav class="postnav">
    <ul>
        {% if prevPost and not 'external' in prevPost.data.tags %}
        <li>тна <a href="{{ prevPost.url | url }}">{{ prevPost.data.title}}</a></li>
        {% endif %}
        <li><a href="{{ '/' | url }}">Home</a></li>
    </ul>
</nav>

