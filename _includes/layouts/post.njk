---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article class="max-w-4xl mx-auto">
    <header class="mb-12">
        <h1 class="text-4xl text-left">{{ title }}</h1>
        <div class="flex text-sm text-gray-700 space-x-4">
            <div class="flex space-x-2">
                <span class="fill-current">{% icon 'calendar' %}</span>
                <span>{{ page.date | readableDate }}</span>
            </div>
            <div class="flex space-x-2">
                <span class="fill-current">{% icon 'tag' %}</span>
                {% for tag in tags | tags %}
                <a class="tag" href="/tags/{{ tag }}/">{{ tag }}</a>
                {% endfor %}
            </div>
        </div>
    </header>
    <section class="article-content">
        {{ content | safe }}
    </section>
</article>
<nav>
    <ul class="flex flex-no-wrap justify-between list-none">
        {% if prevPost and not 'external' in prevPost.data.tags %}
        <li>тна <a class="font-medium" href="{{ prevPost.url | url }}">{{ prevPost.data.title}}</a></li>
        {% endif %}
        <li><a href="{{ '/' | url }}">Home</a></li>
    </ul>
</nav>

