<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{{ renderData.title or title or metadata.title }}</title>

        <link rel="shortcut icon" href="/img/favicon.ico">
        <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

        <link rel="description" content="{{ renderData.description or description or metadata.description }}">
        <link rel="og:description" content="{{ renderData.description or description or metadata.description }}">
        <meta property="og:image" content="{{ renderData.headerImage or headerImage or metadata.avatar}}">

        <link rel="me" href="mailto:nick@nisi.org">
        <link rel="me" href="https://twitter.com/nicknisi">
        <link rel="me" href="https://github.com/nicknisi">
    </head>
    <body>
        <header class="header">
            <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        </header>
        <main{% if templateClass %} class="main-content {{ templateClass }}"{% endif %}>
            {{ content | safe }}
        </main>
        <footer></footer>
        {% if app.environment == 'production' %}
        {% include 'ga.njk' %}
        {% endif %}
    </body>
</html>
